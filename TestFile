
import org.apache.pdfbox.pdmodel.PDDocument;
import org.apache.pdfbox.text.PDFTextStripper;

import java.io.File;
import java.io.IOException;

public class ReadPDFWithFormatting {
    public static void main(String[] args) {
        try {
            // Load the PDF document
            PDDocument document = PDDocument.load(new File("src/main/java/GSTR3B_20CJKPB0693R1ZZ_032023.pdf"));

            // Create a PDFTextStripper object
            PDFTextStripper textStripper = new PDFTextStripper();

            // Set the start and end page (you can adjust as needed)
            textStripper.setStartPage(1);
            textStripper.setEndPage(document.getNumberOfPages());

            // Extract text with original formatting
            String pdfText = textStripper.getText(document);

            // Print the extracted text to the console
            System.out.println(pdfText);

            // Close the PDF document
            document.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
